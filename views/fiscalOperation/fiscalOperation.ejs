<%- include ('../partials/top'); %>

<header><%- include ('../partials/navbar'); %></header>


    <main class="flex-container direction-column">

         
        <h1 class="text-center">Operações Fiscais</h1>

      
        <table class="table table-hover">
            <thead>
                <th scope="col">Registro OF</th>
                <th scope="col">Operação Fiscal</th>
                <th scope="col">Status</th>
                <th scope="col">CFOP</th>
                <th scope="col">CSOSN</th>
                <th scope="col">ICMS</th>
                <th scope="col">Editar</th>
                <th scope="col">Deletar</th>
            </thead>
            <tbody>  

        <% fiscalOperations.forEach(function(fiscalOperation){  %>

                <tr>
                    <td><%=fiscalOperation.id%></td>
                    <td><%=fiscalOperation.fiscalOperation%></td>
                    <td><%=fiscalOperation.status%></td>
                    <td><%=fiscalOperation.cfop.cfop%></td>
                    <td><%=fiscalOperation.csosn.csosn%></td>
                    <td><%=fiscalOperation.icm.aliquota%></td>
                    <td class="ta-center"><a class="font-awesome color-edit" href="/fiscalOperation/edit/<%=fiscalOperation.id%>" 
                        ata-toggle="tooltip" title="Editar Unidade"></a></td>
                    <td class="ta-center"><a class="font-awesome color-delete" href="/fiscalOperation/excluir/<%=fiscalOperation.id%>" 
                        ata-toggle="tooltip" title="Excluir CFOP"
                        onclick="return confirm('Confirmar a Exclusão?')"></a></td>                                       
                </tr>
                </tr>
        <% }) %>
            </tbody>
        </table>
      
              
    </main>

    <article> <%- include ('../partials/menuFiscal.ejs'); %></article>
    <aside><%- include ('../partials/newFiscalOperation.ejs'); %></aside>


    <%- include ('../partials/footer'); %>

